{
  "name": "typenote",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "postinstall": "node scripts/ensure-native-build.mjs electron",
    "rebuild": "electron-rebuild",
    "rebuild:electron": "node scripts/ensure-native-build.mjs electron",
    "rebuild:node": "node scripts/ensure-native-build.mjs node",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "pretest": "node scripts/ensure-native-build.mjs node",
    "test": "pnpm -r --filter '!@typenote/integration-tests' --filter '!@typenote/e2e-tests' test",
    "pretest:integration": "node scripts/ensure-native-build.mjs node",
    "test:integration": "pnpm --filter @typenote/integration-tests test",
    "build:desktop:clean": "pnpm --filter @typenote/desktop clean && pnpm --filter @typenote/desktop build",
    "pretest:e2e": "node scripts/ensure-native-build.mjs electron && pnpm build:desktop:clean",
    "test:e2e": "pnpm --filter @typenote/e2e-tests test",
    "pretest:e2e:quick": "node scripts/ensure-native-build.mjs electron",
    "test:e2e:quick": "pnpm --filter @typenote/e2e-tests test",
    "pretest:e2e:headed": "node scripts/ensure-native-build.mjs electron",
    "test:e2e:headed": "pnpm --filter @typenote/e2e-tests test:headed",
    "test:all": "pnpm test && pnpm test:integration",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "prepare": "husky",
    "mutate": "pnpm -r --filter './packages/*' mutate",
    "deps:check": "depcruise packages apps --config .dependency-cruiser.cjs",
    "deps:graph": "depcruise packages apps --config .dependency-cruiser.cjs --output-type dot | dot -T svg > dependency-graph.svg",
    "predev": "node scripts/ensure-native-build.mjs electron",
    "dev": "pnpm build && pnpm --filter @typenote/desktop dev",
    "predev:quick": "node scripts/ensure-native-build.mjs electron",
    "dev:quick": "pnpm --filter @typenote/desktop dev",
    "prestart": "node scripts/ensure-native-build.mjs electron",
    "start": "pnpm --filter @typenote/desktop dev"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^9.2.1",
    "dependency-cruiser": "^17.3.6",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
