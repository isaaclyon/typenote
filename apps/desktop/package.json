{
  "name": "@typenote/desktop",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc --build && vite build",
    "clean": "rm -rf dist out *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "vite",
    "dev:electron": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "@typenote/api": "workspace:*",
    "@typenote/core": "workspace:*",
    "@typenote/storage": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.23",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "com.typenote.app",
    "productName": "TypeNote",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
